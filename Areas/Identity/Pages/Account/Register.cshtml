@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Purr & Paws</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <div class="register-container">
        <div class="welcome-section">
            <h1>Bienvenido a Purr & Paws</h1>
            <p>Amor, cuidado y diversión para cada patita.</p>
        </div>
        <div class="form-section">

            @if (Model.ExternalLogins?.Count > 0)
            {
                <h4>Crear cuenta con</h4>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            // Botón de GitHub con estilo, igual que en Login.cshtml
                            if (provider.Name == "GitHub")
                            {
                                <button type="submit" name="provider" value="@provider.Name" class="btn-custom btn-github">
                                    <i class="fab fa-github" style="margin-right: 10px;"></i>
                                    Continuar con @provider.DisplayName
                                </button>
                            }
                            else
                            {
                                // Botón genérico para otros proveedores externos
                                <button type="submit" class="btn-custom btn-google" name="provider" value="@provider.Name">
                                    Continuar con @provider.DisplayName
                                </button>
                            }
                        }
                    </div>
                </form>
                <p>o con el Email</p>
            }
            else
            {
                <h4>Crear cuenta</h4>
            }
            <form id="registerForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group-custom">
                    <label asp-for="Input.NombreCompleto" class="form-label-custom"></label>
                    <input asp-for="Input.NombreCompleto" class="form-control-custom" />
                    <span asp-validation-for="Input.NombreCompleto" class="text-danger"></span>
                </div>
                <div class="form-group-custom">
                    <label asp-for="Input.Email" class="form-label-custom">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control-custom" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group-custom">
                    <label asp-for="Input.Password" class="form-label-custom">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control-custom" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group-custom">
                    <label asp-for="Input.ConfirmPassword" class="form-label-custom">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control-custom" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="register-submit" type="submit" class="btn-custom btn-register">Registrarme</button>
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn-custom btn-link">
                        ¿Ya tienes cuenta? Iniciar sesión
                    </a>
                </p>
                <p>
                    <a href="~/Home/Index" class="btn-custom btn-link">Volver a la página de inicio</a>
                </p>
            </form>
            
            </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>