@model PetConnect.Models.Servicio
@{
    ViewData["Title"] = "Editar Servicio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow-sm border-0" style="border-radius: 15px;">
        <div class="card-body p-5">
            <h2 style="color: #333; font-weight: 800; margin-bottom: 2rem; text-align: center;">Editar Servicio</h2>

            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagenPrincipalUrl" /> 

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-4">
                    <div class="col-md-8">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Tipo" class="form-label fw-bold">Tipo</label>
                        <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<PetConnect.Models.TipoServicio>()"></select>
                        <span asp-validation-for="Tipo" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="DescripcionCorta" class="form-label fw-bold">Descripción Corta</label>
                    <textarea asp-for="DescripcionCorta" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="DescripcionCorta" class="text-danger small"></span>
                </div>

                <div class="mb-4 row align-items-center">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Imagen Actual</label>
                        <div class="text-center p-2" style="background: #f9f9f9; border-radius: 10px;">
                            <img src="@(Model.ImagenPrincipalUrl ?? "/images/placeholder.png")" alt="Actual" style="max-height: 150px; max-width: 100%; border-radius: 8px;" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="nuevaImagen" class="form-label fw-bold">Cambiar Imagen (Opcional)</label>
                        <input type="file" name="nuevaImagen" id="nuevaImagen" class="form-control" accept="image/*" />
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="FundacionNombre" class="form-label fw-bold">Nombre Fundación</label>
                    <input asp-for="FundacionNombre" class="form-control" />
                    <span asp-validation-for="FundacionNombre" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-5">
                    <a asp-action="Index" class="btn btn-secondary px-4" style="border-radius: 10px; font-weight: 600;">Cancelar</a>
                    <button type="submit" class="btn px-4" style="background-color: #E88989; color: white; border-radius: 10px; font-weight: 700;">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}