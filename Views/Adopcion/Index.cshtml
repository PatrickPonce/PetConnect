@model List<PetConnect.Models.Servicio>
@{
    ViewData["Title"] = "Adopción de Mascotas";
}

<div class="adopcion-page">
    <div class="hero-banner">
        <img src="~/images/adopcion/banner.jpg" alt="Gatitos en un sofá" />
        <div class="hero-text">
            <h1>Adopción de mascotas</h1>
        </div>
    </div>

    <div class="content-wrapper">
        <h2 class="page-subtitle">Encuentra los mejores lugares de adopción de mascotas</h2>

        <section class="search-section-adopcion">
            <form asp-controller="Adopcion" asp-action="Index" method="get" class="search-form">
                <span class="material-symbols-outlined search-icon-input">search</span>
                <input name="busqueda" type="text" class="search-input" placeholder="¿Qué estás buscando?" />
                <button type="submit" class="search-button">
                    <span class="material-symbols-outlined">tune</span>
                    <span class="material-symbols-outlined">search</span>
                </button>
            </form>
        </section>

        <div class="listing-grid">
            @foreach (var servicio in Model)
            {
                <a asp-action="Detalle" asp-route-id="@servicio.Id" class="listing-card">
                    <div class="card-image">
                        <img src="@servicio.ImagenPrincipalUrl" alt="Logo de @servicio.Nombre" />
                    </div>
                    <div class="card-content">
                        <div class="card-header">
                            <span class="card-fundacion">@servicio.FundacionNombre</span>
                            <span class="material-symbols-outlined card-favorite">star</span>
                        </div>
                        <h3 class="card-title">@servicio.Nombre</h3>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

