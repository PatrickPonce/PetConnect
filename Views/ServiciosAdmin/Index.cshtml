@{
    ViewData["Title"] = "Directorio de Servicios";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* (Tus estilos CSS están perfectos, los omito por brevedad) */
    .admin-dashboard-header {
        text-align: center;
        margin: 2rem 0 4rem 0;
    }
    .admin-dashboard-title {
        color: #333;
        font-weight: 800;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }
    .admin-dashboard-subtitle {
        color: #777;
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }
    .admin-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* 3 columnas en escritorio */
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }
    .admin-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem 2rem;
        text-align: center;
        text-decoration: none;
        color: #555;
        box-shadow: 0 10px 30px rgba(0,0,0,0.06);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 220px; /* Altura fija para alinear */
        position: relative; /* Añadido para el enlace absoluto */
    }
    .admin-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
    }
    .admin-card-icon {
        width: 80px; height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }
    .admin-card-icon .material-symbols-outlined {
        font-size: 2.8rem;
        font-variation-settings: 'FILL' 1;
    }
    .admin-card h3 {
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-size: 1.4rem;
        color: #333;
    }
    .admin-card h4 { /* Estilo para la tarjeta de PetShop que usa h4 */
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-size: 1.4rem;
        color: #333;
    }
    .admin-card p {
        font-size: 0.9rem;
        opacity: 0.8;
        line-height: 1.5;
    }
    
    /* El enlace que cubre toda la tarjeta */
    .card-link {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
        border-radius: 20px; /* Coincide con el borde de la tarjeta */
    }

    /* Colores temáticos */
    .card-veterinaria { border-bottom: 6px solid #4A90E2; }
    .card-veterinaria .admin-card-icon { background-color: #e3f2fd; color: #1565c0; }
    
    .card-petshop { border-bottom: 6px solid #50E3C2; }
    /* (El estilo de PetShop usa 'card-icon-container' en tu código, lo respetamos) */
    .card-icon-container {
         width: 80px; height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }
    .card-icon-container .material-symbols-outlined {
        font-size: 2.8rem;
        font-variation-settings: 'FILL' 1;
    }


    .card-lugar { border-bottom: 6px solid #F5A623; }
    .card-lugar .admin-card-icon { background-color: #fff8e1; color: #e65100; }

    .card-guarderia { border-bottom: 6px solid #9013FE; }
    .card-guarderia .admin-card-icon { background-color: #f3e5f5; color: #6a1b9a; }
    
    .card-adopcion { border-bottom: 6px solid #E88989; }
    .card-adopcion .admin-card-icon { background-color: #fff0f0; color: #c2185b; }
</style>

<div class="container mt-5">
    <div class="admin-dashboard-header">
        <h1 class="admin-dashboard-title">Directorio de Servicios</h1>
        <p class="admin-dashboard-subtitle">Selecciona el área que deseas administrar.</p>
    </div>

    <div class="admin-cards-grid">
        
        <a asp-action="Listado" asp-route-tipo="@PetConnect.Models.TipoServicio.Veterinaria" class="admin-card card-veterinaria">
            <div class="admin-card-icon"><span class="material-symbols-outlined">medical_services</span></div>
            <h3>Veterinarias</h3>
            <p>Gestiona clínicas y hospitales.</p>
        </a>

        <div class="admin-card card-petshop">
            <div class="card-icon-container" style="background-color: #fce4ec;">
                <span class="material-symbols-outlined" style="color: #c2185b;">storefront</span>
            </div>
            <h4>Pet Shops</h4>
            <p>Administra tiendas de productos.</p>
            <a asp-controller="ProductosAdmin" asp-action="Index" class="card-link"></a>
        </div>

        <div class="admin-card card-lugar">
            <div class="admin-card-icon"><span class="material-symbols-outlined">pets</span></div>
            <h3>Lugares Pet Friendly</h3>
            <p>Restaurantes, parques y más.</p>
            <a asp-controller="LugaresAdmin" asp-action="Index" class="card-link"></a>
        </div>

        <div class="admin-card card-guarderia">
            <div class="admin-card-icon"><span class="material-symbols-outlined">home_work</span></div>
            <h3>Guarderías</h3>
            <p>Hospedaje y cuidado temporal.</p>
            <a asp-controller="GuarderiasAdmin" asp-action="Index" class="card-link"></a>
        </div>

        <a asp-action="Listado" asp-route-tipo="@PetConnect.Models.TipoServicio.Adopcion" class="admin-card card-adopcion">
            <div class="admin-card-icon"><span class="material-symbols-outlined">favorite</span></div>
            <h3>Adopción</h3>
            <p>Gestiona refugios y adopciones.</p>
        </a>
    </div>
</div>