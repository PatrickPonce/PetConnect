<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-t" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel Admin</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <style>
        body { background-color: #fdfaf1; }
        .admin-header { display: flex; align-items: center; gap: 30px; padding: 15px 25px; background-color: #97a992; color: #f3d9d7; font-family: 'Poppins', sans-serif; }
        .admin-logo-container { display: flex; align-items: center; gap: 10px; }
        .admin-logo-icon { width: 35px; height: 35px; background-color: white; border-radius: 50%; padding: 5px; }
        .admin-logo-icon img { width: 100%; }
        .admin-nav a { color: #f3d9d7; text-decoration: none; display: flex; align-items: center; gap: 8px; font-size: 1.1rem; }
    </style>
</head>
<body>
    <header class="admin-header">
        <div class="admin-logo-container">
            <div class="admin-logo-icon"><img src="/images/logoP.png" alt="Logo"></div>
            <span>Purr & Paws</span>
        </div>
        <nav class="admin-nav">
            <a asp-controller="NoticiasAdmin" asp-action="Index">Noticias</a>
            <a asp-controller="UsuariosAdmin" asp-action="Index">Usuarios</a>
            <a asp-controller="DirectorioAdmin" asp-action="Index">Directorio</a>
            <a asp-controller="Configuracion" asp-action="Index">Configuraci√≥n</a>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>