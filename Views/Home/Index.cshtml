        /* --- Tarjeta Principal (con borde irregular usando ::before) --- */
        .main-card {
            background-color: #ffffff; /* Fondo blanco SÓLIDO */
            border-radius: 35px; /* Radio de esquina base */
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.05);
            padding: 50px 60px;
            text-align: center;
            width: 90%;
            max-width: 520px;
            aspect-ratio: 1 / 0.8;
            display: flex;
            flex-direction: column;
            justify-content: center;
            z-index: 10;
            animation: slideInFromTop 1s ease-out;
            box-sizing: border-box;
            position: relative; /* Necesario para los pseudo-elementos */
        }

        /* Pseudo-elemento para el borde punteado irregular */
        .main-card::before {
            content: '';
            position: absolute;
            top: -5px; /* Ajuste para que el borde sobresalga un poco */
            left: -5px;
            right: -5px;
            bottom: -5px;
            border: 2px dashed rgba(138, 162, 142, 0.4); /* El borde punteado */
            border-radius: 40px 30px 45px 35px / 30px 45px 35px 40px; /* Borde irregular */
            z-index: 9; /* Detrás del contenido de la tarjeta */
            pointer-events: none; /* Para no interferir con clics */
        }


        /* --- Tipografía de la Tarjeta --- */
        .main-card h1 {
            font-family: 'Quicksand', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #8aa28e;
            margin: 0 0 10px 0;
            line-height: 1.3;
            text-transform: uppercase;
        }

        .main-card p {
            font-family: 'Poppins', sans-serif;
            font-size: 1.1rem;
            color: #7a7a7a;
            margin-bottom: 40px;
        }

        /* --- Grupo de Botones --- */
        .button-group {
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        .button-group .btn {
            text-decoration: none;
            padding: 16px;
            border-radius: 30px;
            font-weight: 600;
            font-size: 1.05rem;
            font-family: 'Quicksand', sans-serif;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            animation: fadeIn 0.8s ease-out backwards;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        /* 1. Botón Primario (Iniciar Sesión) */
        .btn.btn-primary {
            background: #8aa28e;
            color: white;
            animation-delay: 0.5s;
        }

        .btn.btn-primary:hover {
            background: #738e78;
            box-shadow: 0 5px 15px rgba(138, 162, 142, 0.3);
        }

        /* 2. Botón Secundario (Registrarse) */
        .btn.btn-secondary {
            background: #f0f0e0;
            color: #738e78;
            animation-delay: 0.7s;
        }

        .btn.btn-secondary:hover {
            background: #e0e0d0;
        }

        /* 3. Botón Invitado (Estilo "fantasma" con borde y texto naranja-marrón) */
        .btn.btn-guest {
            background: transparent;
            color: #d18d6a; /* Color naranja-marrón del texto */
            border-color: #d18d6a; /* Borde naranja-marrón */
            animation-delay: 0.9s;
        }

        .btn.btn-guest:hover {
            background: #d18d6a;
            color: white;
        }
        
        /* --- BASES DE LAS MASCOTAS (Hechas con CSS Puro) --- */
        .pet-base {
            position: absolute;
            bottom: 0;
            z-index: 4; /* Detrás de las mascotas */
            animation: fadeIn 1.2s ease-out;
        }

        .dog-base {
            left: 2%;
            bottom: -20px;
            width: 380px;
            height: 150px;
            background-color: #f8d2cc; /* Base rosa */
            /* Forma de blob con border-radius */
            border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
            opacity: 0.9;
        }
        
        .cat-base {
            right: 2%;
            bottom: -15px;
            width: 400px;
            height: 120px;
            background-color: #8aa28e; /* Base verde */
            /* Forma de blob con border-radius */
            border-radius: 50% 50% 30% 70% / 60% 40% 60% 40%;
            opacity: 0.9;
        }

        /* --- Imágenes Decorativas (Mascotas) --- */
        .dog-image, .cat-image {
            position: absolute;
            bottom: 0;
            z-index: 5; /* Encima de la base de color */
            max-width: 30%;
            height: auto;
        }

        .dog-image {
            left: 5%; /* Ajuste de posición */
            max-width: 380px;
            animation: slideInFromLeft 1.2s ease-out;
        }

        .cat-image {
            right: 5%; /* Ajuste de posición */
            max-width: 400px;
            animation: slideInFromRight 1.2s ease-out;
        }

        /* --- Responsividad para Móviles --- */
        @@media (max-width: 768px) {
            .dog-image, .cat-image, .pet-base, .decorative-element {
                display: none;
            }
            .main-card {
                width: 90%;
                padding: 35px 25px;
                background-image: none;
                background-color: #ffffff;
                border: 2px dashed rgba(138, 162, 142, 0.4);
                border-radius: 30px;
                aspect-ratio: auto;
            }
            .main-card::before { /* Ocultar el pseudo-elemento en móvil */
                display: none;
            }
            .main-card h1 {
                font-size: 1.8rem;
            }
            .main-card p {
                font-size: 1rem;
            }
        }
    </style>
