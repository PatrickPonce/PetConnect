@model IEnumerable<PetConnect.Models.Noticia>

@if (Model.Any())
{
    @foreach (var post in Model)
    {
        <div class="recent-post-item">
            <a asp-controller="Noticias" asp-action="Detalle" asp-route-id="@post.Id">
                <img src="@(post.UrlImagen ?? "https://via.placeholder.com/75x75?text=Pet")" alt="@post.Titulo" class="recent-post-img" />
            </a>
            <div class="recent-post-info">
                <a asp-controller="Noticias" asp-action="Detalle" asp-route-id="@post.Id">
                    @post.Titulo
                </a>
                <span>@post.FechaPublicacion.ToString("dd/MM/yyyy")</span>
            </div>
        </div>
    }
}
else
{
    <p style="font-size: 0.9rem; color: #777;">Aún no tenemos recomendaciones para ti. ¡Sigue explorando!</p>
}