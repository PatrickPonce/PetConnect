@model PetConnect.Models.Servicio
@{
    ViewData["Title"] = "Crear Servicio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow-sm border-0" style="border-radius: 15px;">
        <div class="card-body p-5">
            <h2 style="color: #333; font-weight: 800; margin-bottom: 2rem; text-align: center;">Nuevo Servicio</h2>

            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-4">
                    <div class="col-md-8">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre del Servicio</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Veterinaria San Francisco" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Tipo" class="form-label fw-bold">Tipo de Servicio</label>
                        <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<PetConnect.Models.TipoServicio>()">
                            <option value="">-- Seleccionar --</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="DescripcionCorta" class="form-label fw-bold">Descripción Corta</label>
                    <textarea asp-for="DescripcionCorta" class="form-control" rows="3" placeholder="Breve resumen que aparecerá en el directorio..."></textarea>
                    <span asp-validation-for="DescripcionCorta" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="imagenArchivo" class="form-label fw-bold">Imagen Principal</label>
                    <input type="file" name="imagenArchivo" id="imagenArchivo" class="form-control" accept="image/*" onchange="previewImage(this)" />
                    <div class="mt-3 text-center">
                        <img id="imagePreview" src="#" alt="Vista previa" style="max-width: 100%; max-height: 200px; border-radius: 10px; display: none;" />
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="FundacionNombre" class="form-label fw-bold">Nombre de Fundación (Opcional)</label>
                    <input asp-for="FundacionNombre" class="form-control" placeholder="Solo para adopciones..." />
                    <span asp-validation-for="FundacionNombre" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-5">
                    <a asp-action="Index" class="btn btn-secondary px-4" style="border-radius: 10px; font-weight: 600;">Cancelar</a>
                    <button type="submit" class="btn px-4" style="background-color: #E88989; color: white; border-radius: 10px; font-weight: 700;">Crear Servicio</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Script simple para previsualizar la imagen seleccionada
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result).show();
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}