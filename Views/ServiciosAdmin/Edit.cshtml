@model PetConnect.Models.Servicio
@{
    ViewData["Title"] = "Editar Servicio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .edit-service-container {
        max-width: 950px;
        margin: 3rem auto 5rem auto;
        font-family: 'Poppins', sans-serif;
    }
    .form-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 15px 50px rgba(0,0,0,0.08);
        overflow: hidden;
        border: 1px solid #f0f0f0;
    }
    .form-header {
        background: linear-gradient(135deg, #97a992 0%, #859f7e 100%);
        padding: 3rem 2.5rem;
        text-align: center;
        color: white;
    }
    .form-header h2 {
        font-weight: 800; font-size: 2.4rem; margin-bottom: 0.8rem; letter-spacing: -0.5px;
    }
    .form-header p {
        font-size: 1.1rem; opacity: 0.95; margin: 0; font-weight: 500;
    }
    .form-body {
        padding: 3rem 4rem; background-color: #fff;
    }
    .form-section {
        background-color: #fdfaf6; border-radius: 16px; padding: 2.5rem;
        margin-bottom: 2.5rem; border: 1px solid #f0ece3;
    }
    .section-title-wrapper {
        display: flex; align-items: center; gap: 15px; margin-bottom: 2rem;
        padding-bottom: 1rem; border-bottom: 2px solid #e8e4dc;
    }
    .section-icon {
        color: #E88989; font-size: 2rem; background: #fff; padding: 12px;
        border-radius: 14px; box-shadow: 0 4px 10px rgba(232, 137, 137, 0.15);
    }
    .section-title {
        font-size: 1.5rem; font-weight: 700; color: #444; margin: 0;
    }
    .form-label {
        font-weight: 600; color: #555; font-size: 0.95rem; margin-bottom: 10px;
        text-transform: uppercase; letter-spacing: 0.5px; display: block;
    }
    .form-control, .form-select {
        display: block; width: 100%; padding: 14px 18px; font-size: 1rem;
        color: #333; background-color: #fff; border: 2px solid #e0e0e0;
        border-radius: 12px; transition: all 0.2s ease-in-out;
    }
    .form-control:focus, .form-select:focus {
        border-color: #97a992; box-shadow: 0 0 0 4px rgba(151, 169, 146, 0.15); outline: 0;
    }
    /* Campo de solo lectura para el Tipo */
    .form-control[readonly] {
        background-color: #f5f5f5; color: #777; cursor: not-allowed; border-color: #eee;
    }

    /* Área de imagen actual y nueva */
    .image-comparison {
        display: grid; grid-template-columns: 1fr 1fr; gap: 30px; align-items: start;
    }
    .current-image-container {
        text-align: center; padding: 1.5rem; background: #fff; border-radius: 16px;
        border: 2px solid #eee; height: 100%; display: flex; flex-direction: column; justify-content: center;
    }
    .current-image {
        max-width: 100%; max-height: 250px; border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08); object-fit: contain;
    }
    .image-upload-area {
        border: 3px dashed #e0e0e0; border-radius: 16px; padding: 2rem;
        text-align: center; cursor: pointer; transition: all 0.3s ease;
        background-color: #fff; display: block; height: 100%;
    }
    .image-upload-area:hover {
        border-color: #97a992; background-color: #f9fdf9;
    }
    .upload-icon {
        font-size: 4rem; color: #ddd; margin-bottom: 1rem; display: block;
        margin-left: auto; margin-right: auto; transition: color 0.3s;
    }
    .image-upload-area:hover .upload-icon { color: #97a992; }

    /* Secciones dinámicas */
    .dynamic-section {
        display: none; animation: fadeIn 0.4s ease;
    }
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Botones */
    .form-actions {
        display: flex; justify-content: flex-end; gap: 20px; margin-top: 4rem;
        padding-top: 2rem; border-top: 1px solid #eee;
    }
    .btn-admin-save {
        background-color: #E88989; color: white; font-weight: 700; padding: 15px 40px;
        border-radius: 12px; border: none; transition: all 0.3s; font-size: 1.1rem;
        display: inline-flex; align-items: center; gap: 10px;
    }
    .btn-admin-save:hover {
        background-color: #d17a7a; transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(232, 137, 137, 0.2); color: white;
    }
    .btn-admin-cancel {
        background-color: #f0f0f0; color: #777; font-weight: 600; padding: 15px 30px;
        border-radius: 12px; text-decoration: none; transition: all 0.3s; font-size: 1.1rem;
        display: inline-flex; align-items: center;
    }
    .btn-admin-cancel:hover { background-color: #e0e0e0; color: #333; }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-body { padding: 2rem 1.5rem; }
        .image-comparison { grid-template-columns: 1fr; gap: 20px; }
        .form-actions { flex-direction: column-reverse; }
        .btn-admin-save, .btn-admin-cancel { width: 100%; justify-content: center; }
    }
</style>

<div class="container edit-service-container">
    <div class="form-card">
        <div class="form-header">
            <h2>Editar Servicio</h2>
            <p>Modificando la información de: <strong>@Model.Nombre</strong></p>
        </div>

        <div class="form-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagenPrincipalUrl" />

                <div class="form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">edit_square</span>
                        <h3 class="section-title">Información General</h3>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <label asp-for="Nombre" class="form-label">Nombre del Servicio <span class="text-danger">*</span></label>
                            <input asp-for="Nombre" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tipo de Servicio</label>
                            <input type="text" class="form-control" value="@Model.Tipo" readonly />
                            <input type="hidden" asp-for="Tipo" id="TipoServicioHidden" />
                        </div>
                    </div>

                    <div class="mb-5">
                        <label asp-for="DescripcionCorta" class="form-label">Descripción Corta</label>
                        <textarea asp-for="DescripcionCorta" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DescripcionCorta" class="text-danger small"></span>
                    </div>

                    <div class="image-comparison">
                        <div>
                            <label class="form-label">Imagen Actual</label>
                            <div class="current-image-container">
                                <img src="@(Model.ImagenPrincipalUrl ?? "/images/placeholder.png")" alt="Imagen actual" class="current-image" id="currentImageDisplay" />
                            </div>
                        </div>
                        <div>
                            <label class="form-label">Cambiar Imagen (Opcional)</label>
                            <label for="nuevaImagen" class="image-upload-area" id="drop-area">
                                <input type="file" name="nuevaImagen" id="nuevaImagen" accept="image/*" hidden onchange="previewImage(this)" />
                                <span class="material-symbols-outlined upload-icon">add_photo_alternate</span>
                                <p class="mb-1" style="font-weight: 600; color: #555; font-size: 1.1rem;">Haz clic para cambiar la imagen</p>
                                <p class="text-muted small mb-0">o arrastra un archivo nuevo aquí</p>
                            </label>
                        </div>
                    </div>
                </div>

                <div id="details-Veterinaria" class="dynamic-section form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">medical_services</span>
                        <h3 class="section-title">Detalles de Veterinaria</h3>
                    </div>
                    <input type="hidden" asp-for="VeterinariaDetalle.Id" />
                    <input type="hidden" asp-for="VeterinariaDetalle.ServicioId" />

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Dirección Completa</label>
                            <input asp-for="VeterinariaDetalle.Direccion" class="form-control" />
                            <span asp-validation-for="VeterinariaDetalle.Direccion" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Teléfono Principal</label>
                            <input asp-for="VeterinariaDetalle.Telefono" class="form-control" />
                            <span asp-validation-for="VeterinariaDetalle.Telefono" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Horario de Atención</label>
                            <input asp-for="VeterinariaDetalle.Horario" class="form-control" />
                            <span asp-validation-for="VeterinariaDetalle.Horario" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Teléfono Emergencia (24h)</label>
                            <input asp-for="VeterinariaDetalle.TelefonoSecundario" class="form-control" />
                            <span asp-validation-for="VeterinariaDetalle.TelefonoSecundario" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                         <label class="form-label">Descripción Larga</label>
                         <textarea asp-for="VeterinariaDetalle.DescripcionLarga" class="form-control" rows="5"></textarea>
                         <span asp-validation-for="VeterinariaDetalle.DescripcionLarga" class="text-danger small"></span>
                    </div>
                </div>

                <div id="details-PetShop" class="dynamic-section form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">storefront</span>
                        <h3 class="section-title">Detalles de Pet Shop</h3>
                    </div>
                    <input type="hidden" asp-for="PetShopDetalle.Id" />
                    <input type="hidden" asp-for="PetShopDetalle.ServicioId" />

                    <div class="mb-4">
                         <label class="form-label">Dirección Tienda Física</label>
                         <input asp-for="PetShopDetalle.Direccion" class="form-control" />
                         <span asp-validation-for="PetShopDetalle.Direccion" class="text-danger small"></span>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Marcas Destacadas</label>
                            <input asp-for="PetShopDetalle.MarcasDestacadas" class="form-control" />
                            <div class="form-text text-muted">Separadas por comas.</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Categorías de Productos</label>
                            <input asp-for="PetShopDetalle.CategoriasProductos" class="form-control" />
                        </div>
                    </div>
                    <div class="form-check form-switch p-3 bg-white border rounded-3">
                        <input class="form-check-input" type="checkbox" asp-for="PetShopDetalle.OfreceCompraOnline" style="margin-left: 0; margin-right: 10px; cursor: pointer;">
                        <label class="form-check-label fw-bold" asp-for="PetShopDetalle.OfreceCompraOnline" style="cursor: pointer;">¿Ofrece compra online?</label>
                    </div>
                </div>

                <div id="details-Adopcion" class="dynamic-section form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">volunteer_activism</span>
                        <h3 class="section-title">Detalles de Adopción</h3>
                    </div>
                    <input type="hidden" asp-for="AdopcionDetalle.Id" />
                    <input type="hidden" asp-for="AdopcionDetalle.ServicioId" />

                    <div class="mb-4">
                        <label asp-for="FundacionNombre" class="form-label">Nombre de la Fundación / Albergue</label>
                        <input asp-for="FundacionNombre" class="form-control" />
                        <span asp-validation-for="FundacionNombre" class="text-danger small"></span>
                    </div>
                     <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Dirección (Opcional)</label>
                            <input asp-for="AdopcionDetalle.Direccion" class="form-control" />
                            <span asp-validation-for="AdopcionDetalle.Direccion" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Teléfono / WhatsApp</label>
                            <input asp-for="AdopcionDetalle.Telefono" class="form-control" />
                            <span asp-validation-for="AdopcionDetalle.Telefono" class="text-danger small"></span>
                        </div>
                    </div>
                     <div class="mb-3">
                         <label class="form-label">Requisitos y Proceso</label>
                         <textarea asp-for="AdopcionDetalle.DescripcionLarga" class="form-control" rows="5"></textarea>
                         <span asp-validation-for="AdopcionDetalle.DescripcionLarga" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <a asp-action="Listado" asp-route-tipo="@Model.Tipo" class="btn-admin-cancel">Cancelar</a>
                    <button type="submit" class="btn-admin-save">
                        <span class="material-symbols-outlined">save</span> Guardar Cambios
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // 1. Función para previsualizar la NUEVA imagen (reemplaza visualmente la actual)
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    // Actualizamos la imagen de la izquierda con la nueva selección
                    $('#currentImageDisplay').attr('src', e.target.result).hide().fadeIn();
                    // Damos feedback visual en el área de carga
                    $('.image-upload-area').css('border-color', '#97a992').css('background-color', '#f9fdf9');
                    $('.upload-icon').css('color', '#97a992').text('check_circle');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // 2. Mostrar la sección correcta automáticamente al cargar
        $(document).ready(function() {
            // Obtenemos el tipo actual desde el modelo (que pusimos en el input hidden)
            var currentType = '@Model.Tipo.ToString()';
            
            // Mostramos la sección correspondiente inmediatamente
            $('#details-' + currentType).show();
        });

        // 3. (Opcional) Efecto drag & drop visual
        var dropArea = document.getElementById('drop-area');
        if (dropArea) {
            ['dragenter', 'dragover'].forEach(eventName => {
                dropArea.addEventListener(eventName, highlight, false);
            });
            ['dragleave', 'drop'].forEach(eventName => {
                dropArea.addEventListener(eventName, unhighlight, false);
            });
            function highlight(e) { dropArea.classList.add('dragover'); dropArea.style.borderColor = '#97a992'; dropArea.style.backgroundColor = '#f9fdf9'; }
            function unhighlight(e) { dropArea.classList.remove('dragover'); dropArea.style.borderColor = '#e0e0e0'; dropArea.style.backgroundColor = '#fff'; }
        }
    </script>
}