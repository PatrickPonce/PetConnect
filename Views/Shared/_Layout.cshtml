<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Purr & Paws</title>
    
    <!-- Importar Google Fonts y Material Symbols (necesarios para los iconos) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    

    <!-- Referencia a tu archivo CSS principal -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
    <header class="navbar-container">
        <a class="logo-link" asp-controller="Home" asp-action="Index">
            <img src="~/images/logoP.png" alt="Purr & Paws Logo" class="navbar-logo">
        </a>
        <nav class="navbar-links">
            <a class="nav-item" asp-controller="Noticias" asp-action="Index"><i class="fas fa-newspaper"></i> Noticias</a>
            <a class="nav-item" href="#"><i class="fas fa-paw"></i> Servicios</a>
            <a class="nav-item" href="#"><i class="fas fa-heart"></i> Favoritos</a>
            <a class="nav-item" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</a>
        </nav>
    </header>

    <div class="container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>