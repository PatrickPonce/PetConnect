@using System.Collections.Generic
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Configuración del Sitio";
    
    var configuraciones = ViewBag.Configuraciones as Dictionary<string, string> ?? new Dictionary<string, string>();
    var logoUrl = configuraciones.GetValueOrDefault("UrlLogo", "/images/logoP.png");
    var logoUrlConVersion = $"{logoUrl}?v={configuraciones.GetValueOrDefault("UrlLogoVersion", "1")}";
    var urlBanner = configuraciones.GetValueOrDefault("UrlBanner", "/images/veterinaria_banner.jpg");
    var bannerUrlConVersion = $"{urlBanner}?v={configuraciones.GetValueOrDefault("UrlBannerVersion", "1")}";
    var nombreSitio = configuraciones.GetValueOrDefault("NombreSitio", "Purr & Paws");
}

<style>
    .config-container { max-width: 900px; margin: 3rem auto; font-family: 'Poppins', sans-serif; }
    .config-header { text-align: center; margin-bottom: 3rem; }
    .config-title { font-weight: 800; font-size: 2.5rem; color: #333; margin-bottom: 0.5rem; }
    .config-subtitle { color: #777; font-size: 1.1rem; }

    /* Tarjetas de Sección */
    .config-section-card {
        background: white; border-radius: 20px; box-shadow: 0 5px 25px rgba(0,0,0,0.05);
        padding: 2.5rem; margin-bottom: 2.5rem; border: 1px solid #f0f0f0;
    }
    .section-header { display: flex; align-items: center; gap: 15px; margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 2px solid #f5f5f5; }
    .section-icon { color: #E88989; background: #fff0f0; padding: 10px; border-radius: 12px; font-size: 1.8rem; }
    .section-title-text { font-size: 1.5rem; font-weight: 700; color: #444; margin: 0; }

    /* Formularios */
    .form-label { font-weight: 700; color: #555; margin-bottom: 8px; display: block; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 0.5px; }
    .form-control { padding: 14px 18px; border-radius: 12px; border: 2px solid #eee; transition: all 0.3s; font-size: 1rem; width: 100%; }
    .form-control:focus { border-color: #97a992; box-shadow: 0 0 0 4px rgba(151, 169, 146, 0.15); outline: none; }

    /* Áreas de subida de imagen */
    .upload-area {
        border: 3px dashed #e0e0e0; border-radius: 16px; padding: 2rem; text-align: center;
        cursor: pointer; transition: all 0.3s; background-color: #fafafa; display: block; position: relative;
    }
    .upload-area:hover { border-color: #97a992; background-color: #f9fdf9; }
    .current-preview {
        max-width: 100%; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        margin-bottom: 1.5rem; display: block; margin-left: auto; margin-right: auto;
    }
    .upload-placeholder { color: #999; }
    .upload-icon { font-size: 3.5rem; color: #ccc; margin-bottom: 0.5rem; transition: color 0.3s; }
    .upload-area:hover .upload-icon { color: #97a992; }

    /* Botón Flotante de Guardar */
    .floating-save-bar {
        position: fixed; bottom: 30px; left: 50%; transform: translateX(-50%);
        background: white; padding: 15px 30px; border-radius: 50px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2); z-index: 100;
        display: flex; align-items: center; gap: 20px;
        animation: slideUp 0.5s ease-out;
    }
    @@keyframes slideUp { from { transform: translate(-50%, 100%); opacity: 0; } to { transform: translate(-50%, 0); opacity: 1; } }
    .btn-save-config {
        background-color: #E88989; color: white; font-weight: 800; padding: 12px 40px;
        border-radius: 30px; border: none; transition: all 0.3s; font-size: 1.1rem;
        display: flex; align-items: center; gap: 8px; cursor: pointer;
    }
    .btn-save-config:hover { background-color: #d17a7a; transform: scale(1.05); }
</style>

<div class="container config-container">
    
    <div class="config-header">
        <h1 class="config-title">Configuración del Sitio</h1>
        <p class="config-subtitle">Personaliza la identidad visual y los datos de tu plataforma.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-5" style="border-radius: 15px; background-color: #d4edda; color: #155724; border: none; padding: 20px; font-weight: 600; display: flex; align-items: center; gap: 10px;">
            <span class="material-symbols-outlined">check_circle</span> @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Guardar" method="post" enctype="multipart/form-data" id="configForm">
        @Html.AntiForgeryToken()

        <div class="config-section-card">
            <div class="section-header">
                <span class="material-symbols-outlined section-icon">tune</span>
                <h3 class="section-title-text">Información General</h3>
            </div>
            <div class="mb-3">
                <label for="nombreSitio" class="form-label">Nombre del Sitio Web</label>
                <input type="text" class="form-control" id="nombreSitio" name="nombreSitio" value="@nombreSitio" required>
            </div>
        </div>

        <div class="config-section-card">
            <div class="section-header">
                <span class="material-symbols-outlined section-icon">palette</span>
                <h3 class="section-title-text">Imágenes y Marca</h3>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label">Logo del Sitio</label>
                    <label for="logoUpload" class="upload-area">
                        <img src="@logoUrlConVersion" id="logoPreview" class="current-preview" style="max-height: 120px; object-fit: contain;" alt="Logo actual">
                        <div class="upload-placeholder">
                            <span class="material-symbols-outlined upload-icon">cloud_upload</span>
                            <p style="font-weight: 600; color: #555; margin-bottom: 0;">Clic para cambiar logo</p>
                            <small>(PNG transparente recomendado)</small>
                        </div>
                        <input type="file" id="logoUpload" name="logo" accept="image/*" hidden onchange="previewImage(this, 'logoPreview')">
                    </label>
                </div>

                <div class="col-md-6 mb-4">
                    <label class="form-label">Banner Principal</label>
                    <label for="bannerUpload" class="upload-area">
                        <img src="@bannerUrlConVersion" id="bannerPreview" class="current-preview" style="max-height: 200px; width: 100%; object-fit: cover;" alt="Banner actual">
                        <div class="upload-placeholder">
                            <span class="material-symbols-outlined upload-icon">image</span>
                            <p style="font-weight: 600; color: #555; margin-bottom: 0;">Clic para cambiar banner</p>
                            <small>(JPG alta calidad, 1920x600px)</small>
                        </div>
                        <input type="file" id="bannerUpload" name="banner" accept="image/*" hidden onchange="previewImage(this, 'bannerPreview')">
                    </label>
                </div>
            </div>
        </div>

        <div class="floating-save-bar">
            <span style="color: #777; font-weight: 500;">¿Terminaste los cambios?</span>
            <button type="submit" class="btn-save-config">
                <span class="material-symbols-outlined">save</span> Guardar Todo
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <script>
        function previewImage(input, previewId) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById(previewId).src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}