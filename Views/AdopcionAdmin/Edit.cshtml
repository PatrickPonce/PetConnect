@model PetConnect.Models.Servicio

@{
    ViewData["Title"] = "Editar Centro de Adopción";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .create-service-container { max-width: 950px; margin: 3rem auto 5rem auto; font-family: 'Poppins', sans-serif; }
    .form-card { background: #fff; border-radius: 24px; box-shadow: 0 15px 50px rgba(0,0,0,0.08); overflow: hidden; border: 1px solid #f0f0f0; }
    .form-header { background: linear-gradient(135deg, #97a992 0%, #859f7e 100%); padding: 3rem 2.5rem; text-align: center; color: white; }
    .form-header h2 { font-weight: 800; font-size: 2.4rem; margin-bottom: 0.8rem; }
    .form-header p { font-size: 1.1rem; opacity: 0.95; margin: 0; font-weight: 500; }
    .form-body { padding: 3rem 4rem; background-color: #fff; }
    .form-section { background-color: #fdfaf6; border-radius: 16px; padding: 2.5rem; margin-bottom: 2.5rem; border: 1px solid #f0ece3; }
    .section-title-wrapper { display: flex; align-items: center; gap: 15px; margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 2px solid #e8e4dc; }
    .section-icon { color: #E88989; font-size: 2rem; background: #fff; padding: 12px; border-radius: 14px; box-shadow: 0 4px 10px rgba(232, 137, 137, 0.15); }
    .section-title { font-size: 1.5rem; font-weight: 700; color: #444; margin: 0; }
    .form-label { font-weight: 600; color: #555; font-size: 0.95rem; margin-bottom: 10px; text-transform: uppercase; letter-spacing: 0.5px; display: block; }
    .form-control, .form-select { display: block; width: 100%; padding: 14px 18px; font-size: 1rem; color: #333; background-color: #fff; border: 2px solid #e0e0e0 !important; border-radius: 12px; transition: all 0.2s ease-in-out; }
    .form-control:focus, .form-select:focus { border-color: #97a992 !important; box-shadow: 0 0 0 4px rgba(151, 169, 146, 0.15) !important; outline: 0; }
    textarea.form-control { min-height: 100px; resize: vertical; }
    .image-comparison { display: grid; grid-template-columns: 1fr 1fr; gap: 30px; align-items: start; }
    .current-image-container { text-align: center; padding: 1.5rem; background: #fff; border-radius: 16px; border: 2px solid #eee; height: 100%; display: flex; flex-direction: column; justify-content: center; }
    .current-image { max-width: 100%; max-height: 250px; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.08); object-fit: contain; }
    .image-upload-area { border: 3px dashed #e0e0e0; border-radius: 16px; padding: 2rem; text-align: center; cursor: pointer; transition: all 0.3s ease; background-color: #fff; display: block; height: 100%; }
    .image-upload-area:hover { border-color: #97a992; background-color: #f9fdf9; }
    .upload-icon { font-size: 4rem; color: #ddd; margin-bottom: 1rem; display: block; margin-left: auto; margin-right: auto; transition: color 0.3s; }
    .image-upload-area:hover .upload-icon { color: #97a992; }
    .form-actions { display: flex; justify-content: flex-end; gap: 20px; margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #eee; }
    .btn-admin-save { background-color: #E88989; color: white; font-weight: 700; padding: 15px 40px; border-radius: 12px; border: none; transition: all 0.3s; font-size: 1.1rem; display: inline-flex; align-items: center; gap: 10px; text-decoration: none; }
    .btn-admin-save:hover { background-color: #d17a7a; transform: translateY(-3px); box-shadow: 0 10px 20px rgba(232, 137, 137, 0.2); color: white; }
    .btn-admin-cancel { background-color: #f0f0f0; color: #777; font-weight: 600; padding: 15px 30px; border-radius: 12px; text-decoration: none; transition: all 0.3s; font-size: 1.1rem; display: inline-flex; align-items: center; }
    .btn-admin-cancel:hover { background-color: #e0e0e0; color: #333; }
</style>

<div class="container create-service-container">
    <div class="form-card">
        <div class="form-header">
            <h2>Editar Centro de Adopción</h2>
            <p>Modificando: @Model.Nombre</p>
        </div>

        <div class="form-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Tipo" />
                <input type="hidden" asp-for="ImagenPrincipalUrl" />
                <input type="hidden" asp-for="AdopcionDetalle.Id" />
                <input type="hidden" asp-for="AdopcionDetalle.ServicioId" />


                <div class="form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">info</span>
                        <h3 class="section-title">Información General</h3>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label">Nombre del Servicio <span class="text-danger">*</span></label>
                            <input asp-for="Nombre" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                         <div class="col-md-6">
                            <label asp-for="FundacionNombre" class="form-label">Nombre Fundación/Refugio</label>
                            <input asp-for="FundacionNombre" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DescripcionCorta" class="form-label">Descripción Corta</label>
                        <textarea asp-for="DescripcionCorta" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DescripcionCorta" class="text-danger small"></span>
                    </div>

                    <div class="image-comparison">
                        <div>
                            <label class="form-label">Imagen Actual</label>
                            <div class="current-image-container">
                                <img src="@(Model.ImagenPrincipalUrl ?? "/images/placeholder.png")" alt="Imagen actual" class="current-image" id="currentImageDisplay" />
                            </div>
                        </div>
                        <div>
                            <label class="form-label">Cambiar Imagen (Opcional)</label>
                            <label for="nuevaImagen" class="image-upload-area" id="drop-area">
                                <input type="file" name="nuevaImagen" id="nuevaImagen" accept="image/*" hidden onchange="previewImage(this)" />
                                <span class="material-symbols-outlined upload-icon">add_photo_alternate</span>
                                <p class="mb-1" style="font-weight: 600; color: #555; font-size: 1.1rem;">Haz clic para cambiar la imagen</p>
                                <p class="text-muted small mb-0">o arrastra un archivo nuevo aquí</p>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">volunteer_activism</span>
                        <h3 class="section-title">Detalles de Adopción</h3>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="AdopcionDetalle.Direccion" class="form-label">Dirección (Opcional)</label>
                            <input asp-for="AdopcionDetalle.Direccion" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AdopcionDetalle.Telefono" class="form-label">Teléfono / WhatsApp</label>
                            <input asp-for="AdopcionDetalle.Telefono" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                         <label asp-for="AdopcionDetalle.DescripcionLarga" class="form-label">Descripción Larga (Requisitos, proceso...)</label>
                         <textarea asp-for="AdopcionDetalle.DescripcionLarga" class="form-control" rows="5"></textarea>
                    </div>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn-admin-cancel">Cancelar</a>
                    <button type="submit" class="btn-admin-save">
                        <span class="material-symbols-outlined">save</span> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#currentImageDisplay').attr('src', e.target.result).hide().fadeIn();
                    $('.image-upload-area').css('border-color', '#97a992').css('background-color', '#f9fdf9');
                    $('.upload-icon').css('color', '#97a992').text('check_circle');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </G}
    </script>
}