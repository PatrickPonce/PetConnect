<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Purr & Paws</title>
    
    <!-- Importar Google Fonts y Material Symbols (necesarios para los iconos) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    

    <!-- Referencia a tu archivo CSS principal -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>

    @* AQUÍ ESTÁ LA MAGIA: Llamamos a nuestra vista parcial reutilizable *@
    @await Html.PartialAsync("_Navbar")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Referencia a tu archivo JavaScript principal -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>