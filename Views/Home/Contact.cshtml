@{
    ViewData["Title"] = "Contacto";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h1 style="color: #E88989; font-weight: 700; margin-bottom: 1.5rem;">Contáctanos</h1>
            <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem;">
                ¿Tienes alguna pregunta, sugerencia o necesitas ayuda? Estamos aquí para escucharte. Llena el formulario y te responderemos lo antes posible.
            </p>
            
            <div style="margin-bottom: 2rem;">
                <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 1rem;">
                     <span class="material-symbols-outlined" style="color: #97a992; font-size: 1.5rem;">mail</span>
                     <span>soporte@petconnect.com</span>
                </div>
                <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 1rem;">
                     <span class="material-symbols-outlined" style="color: #97a992; font-size: 1.5rem;">call</span>
                     <span>+51 999 999 999</span>
                </div>
                <div style="display: flex; align-items: center; gap: 10px;">
                     <span class="material-symbols-outlined" style="color: #97a992; font-size: 1.5rem;">location_on</span>
                     <span>Lima, Perú</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.05);">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Tu Nombre</label>
                        <input type="text" class="form-control" placeholder="Ej. Juan Pérez">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" placeholder="nombre@ejemplo.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mensaje</label>
                        <textarea class="form-control" rows="5" placeholder="¿En qué podemos ayudarte?"></textarea>
                    </div>
                    <button type="submit" class="btn" style="background-color: #97a992; color: white; width: 100%; font-weight: bold;">Enviar Mensaje</button>
                </form>
            </div>
        </div>
    </div>
</div>