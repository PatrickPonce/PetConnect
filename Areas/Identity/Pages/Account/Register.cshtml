@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Purr & Paws</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="register-container">
        <div class="welcome-section">
            <h1>Bienvenido a Purr & Paws</h1>
            <p>Amor, cuidado y diversión para cada patita.</p>
        </div>
        <div class="form-section">
            <form id="registerForm" method="post">
                <h4>Crear cuenta</h4>
                <button type="button" class="btn-custom btn-google">
                    <img src="~/images/google-icon.png" alt="Google Icon" style="height: 1.2em; vertical-align: middle; margin-right: 10px;" />
                    Iniciar sesión con Google
                </button>
                <p>o con el Email</p>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group-custom">
                    <label asp-for="Input.Email" class="form-label-custom">Nombre Completo</label>
                    <input class="form-control-custom" />
                </div>
                <div class="form-group-custom">
                    <label asp-for="Input.Email" class="form-label-custom">Correo electrónico</label>
                    <input asp-for="Input.Email" class="form-control-custom" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group-custom">
                    <label asp-for="Input.Password" class="form-label-custom">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control-custom" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group-custom">
                    <label asp-for="Input.ConfirmPassword" class="form-label-custom">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control-custom" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="register-submit" type="submit" class="btn-custom btn-register">Registrarme</button>
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn-custom btn-link">¿Ya tienes cuenta? Iniciar sesión</a>
                </p>
                <p>
                    <a href="~/Home/Index" class="btn-custom btn-link">Volver a la página de inicio</a>
                </p>
            </form>
            @if (Model.ExternalLogins?.Count > 0)
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <input type="hidden" name="Provider" value="Google" />
                    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                </form>
            }
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>