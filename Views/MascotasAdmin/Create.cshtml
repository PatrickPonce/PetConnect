@model PetConnect.Models.Mascota

@{
    ViewData["Title"] = "Agregar Mascota";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .create-service-container { max-width: 950px; margin: 3rem auto 5rem auto; font-family: 'Poppins', sans-serif; }
    .form-card { background: #fff; border-radius: 24px; box-shadow: 0 15px 50px rgba(0,0,0,0.08); overflow: hidden; border: 1px solid #f0f0f0; }
    .form-header { background: linear-gradient(135deg, #97a992 0%, #859f7e 100%); padding: 3rem 2.5rem; text-align: center; color: white; }
    .form-header h2 { font-weight: 800; font-size: 2.4rem; margin-bottom: 0.8rem; }
    .form-header p { font-size: 1.1rem; opacity: 0.95; margin: 0; font-weight: 500; }
    .form-body { padding: 3rem 4rem; background-color: #fff; }
    .form-section { background-color: #fdfaf6; border-radius: 16px; padding: 2.5rem; margin-bottom: 2.5rem; border: 1px solid #f0ece3; }
    .section-title-wrapper { display: flex; align-items: center; gap: 15px; margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 2px solid #e8e4dc; }
    .section-icon { color: #E88989; font-size: 2rem; background: #fff; padding: 12px; border-radius: 14px; box-shadow: 0 4px 10px rgba(232, 137, 137, 0.15); }
    .section-title { font-size: 1.5rem; font-weight: 700; color: #444; margin: 0; }
    .form-label { font-weight: 600; color: #555; font-size: 0.95rem; margin-bottom: 10px; text-transform: uppercase; letter-spacing: 0.5px; display: block; }
    .form-control, .form-select { display: block; width: 100%; padding: 14px 18px; font-size: 1rem; color: #333; background-color: #fff; border: 2px solid #e0e0e0 !important; border-radius: 12px; transition: all 0.2s ease-in-out; }
    .form-control:focus, .form-select:focus { border-color: #97a992 !important; box-shadow: 0 0 0 4px rgba(151, 169, 146, 0.15) !important; outline: 0; }
    textarea.form-control { min-height: 100px; resize: vertical; }
    .form-actions { display: flex; justify-content: flex-end; gap: 20px; margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #eee; }
    .btn-admin-save { background-color: #E88989; color: white; font-weight: 700; padding: 15px 40px; border-radius: 12px; border: none; transition: all 0.3s; font-size: 1.1rem; display: inline-flex; align-items: center; gap: 10px; text-decoration: none; }
    .btn-admin-save:hover { background-color: #d17a7a; transform: translateY(-3px); box-shadow: 0 10px 20px rgba(232, 137, 137, 0.2); color: white; }
    .btn-admin-cancel { background-color: #f0f0f0; color: #777; font-weight: 600; padding: 15px 30px; border-radius: 12px; text-decoration: none; transition: all 0.3s; font-size: 1.1rem; display: inline-flex; align-items: center; }
    .btn-admin-cancel:hover { background-color: #e0e0e0; color: #333; }
</style>

<div class="container create-service-container">
    <div class="form-card">
        <div class="form-header">
            <h2>Agregar Mascota</h2>
            <p>A침adir una nueva mascota al listado de adopci칩n.</p>
        </div>

        <div class="form-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="alert alert-danger mb-4" role="alert"></div>

                <div class="form-section">
                    <div class="section-title-wrapper">
                        <span class="material-symbols-outlined section-icon">pets</span>
                        <h3 class="section-title">Datos de la Mascota</h3>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Bruno" required />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Tipo" class="form-label"></label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="Perro">Perro</option>
                                <option value="Gato">Gato</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Raza" class="form-label"></label>
                            <input asp-for="Raza" class="form-control" placeholder="Ej: Mestizo, Labrador" />
                            <span asp-validation-for="Raza" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Genero" class="form-label"></label>
                             <select asp-for="Genero" class="form-select">
                                <option value="Macho">Macho</option>
                                <option value="Hembra">Hembra</option>
                            </select>
                            <span asp-validation-for="Genero" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="Edad" class="form-label"></label>
                            <select asp-for="Edad" class="form-select">
                                <option value="Cachorro">Cachorro</option>
                                <option value="Joven">Joven</option>
                                <option value="Adulto">Adulto</option>
                                <option value="Senior">Senior</option>
                            </select>
                            <span asp-validation-for="Edad" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Contacto" class="form-label"></label>
                            <input asp-for="Contacto" class="form-control" placeholder="Ej: Albergue Patitas" />
                            <span asp-validation-for="Contacto" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="UrlImagen" class="form-label"></label>
                        <input asp-for="UrlImagen" class="form-control" placeholder="https://ejemplo.com/foto.jpg" />
                        <span asp-validation-for="UrlImagen" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Temperamento" class="form-label"></label>
                        <input asp-for="Temperamento" class="form-control" placeholder="Ej: Juguet칩n, Dormil칩n, Amigable" />
                        <span asp-validation-for="Temperamento" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Historia de la mascota, cuidados especiales..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn-admin-cancel">Cancelar</a>
                    <button type="submit" class="btn-admin-save">
                        <span class="material-symbols-outlined">save</span> Guardar Mascota
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}