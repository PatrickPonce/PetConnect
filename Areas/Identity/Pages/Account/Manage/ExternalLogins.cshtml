@page
@model ExternalLoginsModel
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Administrar inicios de sesión externos";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3 class="mb-3">@ViewData["Title"]</h3>

@if (Model.CurrentLogins?.Count > 0)
{
    <h4>Inicios de sesión registrados</h4>
    <table class="table">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr>
                    <td id="@($"login-provider-{login.LoginProvider}")">@login.ProviderDisplayName</td>
                    <td>
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                                <div>
                                    <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                    <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                    <button type="submit" class="btn btn-danger" title="Eliminar este inicio de sesión de @login.ProviderDisplayName de tu cuenta">Eliminar</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.OtherLogins?.Count > 0)
{
    <h4>Agregar otro servicio para iniciar sesión.</h4>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Inicia sesión con tu cuenta de @provider.DisplayName">
                        @provider.DisplayName
                    </button>
                }
            </p>
        </div>
    </form>
}