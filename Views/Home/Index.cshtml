    <style>
        /* --- Definición de Animaciones (Keyframes) --- */
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@keyframes slideInFromTop {
            from { transform: translateY(-30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @@keyframes slideInFromLeft {
            from { transform: translateX(-100px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @@keyframes slideInFromRight {
            from { transform: translateX(100px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        /* --- Estilos Generales --- */
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            overflow: hidden;
        }

        /* --- Contenedor Principal de la Landing Page --- */
        .landing-page-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            
            /* Fondo de la imagen objetivo: Color base crema/beige + Textura */
            background-color: #f5f5dc; /* Color Crema/Beige claro */
            /* Textura de papel sutil (no requiere imagen) */
            background-image: url('https://www.transparenttextures.com/patterns/cream-pixels.png');
            background-repeat: repeat;
            
            position: relative;
            overflow: hidden;
        }

        /* --- ELEMENTOS DECORATIVOS (Hechos con CSS Puro) --- */
        .decorative-element {
            position: absolute;
            pointer-events: none;
            z-index: 1;
            animation: fadeIn 1.5s ease-out;
        }

        /* Manchas de acuarela (CSS filter:blur) */
        .color-blob.one {
            top: -50px; left: -50px;
            width: 350px; height: 350px;
            background-color: #8aa28e; /* Verde olivo */
            border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%; /* Forma de blob */
            filter: blur(70px); /* Desenfoque de acuarela */
            opacity: 0.25; /* Muy sutil */
        }
        .color-blob.two {
            top: 5%; right: 5%;
            width: 280px; height: 280px;
            background-color: #f8d2cc; /* Rosa más oscuro */
            border-radius: 50% 50% 30% 70% / 60% 40% 60% 40%;
            filter: blur(60px);
            opacity: 0.2;
        }
        /* MAS ACUARELAS */
